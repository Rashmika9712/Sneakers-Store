@page
@model Sneakers_store_web.Pages.Customer.Shopping.IndexModel
@{
    ViewData["Title"] = "Shopping";
}

<div class="container-fluid">

    <partial name="_Nav" />

    <section name="main">

        <div class="container">
            <div class="row">
                @foreach (var category in Model.CategoryList)
                {
                    <h2 class="ps-3 mt-3 clrf"><b>@category.Name</b></h2>
                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var shoeItem in Model.ShoeItemList.Where(u => u.CategoryId == category.Id))
                            {
                                <div class="col-lg-4 col-md-6 pb-4 filter">

                                    <div class="card rounded shadow-sm" style="border:1px solid #222">
                                        <div class="card-body row pb-1">
                                            <div class="col-7 h4 clrf">@shoeItem.Name</div>
                                            <div class="col-5 text-end"><span class="clrf h4">LKR @shoeItem.Price</span></div>
                                        </div>
                                        <img class="card-img-top img-fluid d-block mx-auto" src="@shoeItem.Image" alt="shoeitem image" />
                                        <div class="card-body p-1 px-3 row">
                                            <div class="col-6 border-0">
                                                <span class="badge p-2 border w-100 clr2">@shoeItem.Category.Name</span>
                                            </div>
                                            <div class="col-6 border-0">
                                                <span class="badge p-2 border w-100 clr">@shoeItem.ShoeType.Name</span>
                                            </div>
                                            <div class="col-12 pt-2" style="font-size:9px;text-align:justify">
                                                <p>@Html.Raw(shoeItem.Description)</p>
                                            </div>
                                            <div class="col-12 p-1">
                                                <a asp-page="Details" asp-route-id="@shoeItem.Id" class="btn clr form-control btn-sm p-2 text-light">
                                                    View Details
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            }
                        </div>
                    </div>
                }
            </div>
        </div>

    </section>

</div>