@page
@model RegisterModel
@using SneakersStore.Utility
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid">

    <partial name="_Nav" />

    <section name="main">
        <div class="container mt-3 pb-2">
            <center>
                <h1 class="clrf">@ViewData["Title"]</h1>

                <div class="col-12 col-md-6 text-start border p-3 m-3">
                    <div class="row py-2">
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <h2 class="text-center">Create a new account</h2>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating my-2">
                                <input asp-for="Input.FirstName" class="form-control" aria-required="true" />
                                <label asp-for="Input.FirstName"></label>
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-floating my-2">
                                <input asp-for="Input.LastName" class="form-control" aria-required="true" />
                                <label asp-for="Input.LastName"></label>
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-floating my-2">
                                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                                <label asp-for="Input.PhoneNumber"></label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-floating my-2">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating my-2">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.Password"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating my-2">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.ConfirmPassword"></label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            @if (User.IsInRole(SD.ManagerRole))
                            {
                                <div class="form-floating my-2">
                                    <input type="radio" name="rdUserRole" vlaue="@SD.ManagerRole" />&nbsp;@SD.ManagerRole
                                </div>
                            }

                            <button id="registerSubmit" type="submit" class="btn btn-lg clr text-light form-control">Register</button>
                        </form>
                    </div>                    
                </div>
            </center>
        </div>
    </section>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
