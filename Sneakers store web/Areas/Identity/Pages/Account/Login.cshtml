@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid">

    <partial name="_Nav" />

    <section name="main">
        <div class="container mt-3 pb-2">
            <center>
                <h1 class="clrf">@ViewData["Title"]</h1>

                <div class="col-12 col-md-6 border p-3 m-3 text-start">
                    <div class="row border-bottom">
                        <div>
                            <section>
                                <form id="account" method="post">
                                    <h2 class="text-center">Use a local account to log in.</h2>
                                    <hr />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating my-2">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating my-2">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                        <label asp-for="Input.Password" class="form-label"></label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div>
                                        <div class="checkbox">
                                            <label asp-for="Input.RememberMe" class="form-label">
                                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <div>
                                        <button id="login-submit" type="submit" class="btn btn-lg clr text-light form-control">Log in</button>
                                    </div>
                                    <div class="my-2">
                                        <p>
                                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                        </p>
                                        <p>
                                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                        </p>
                                        <p>
                                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                        </p>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>                    
                </div>
            </center>
        </div>
    </section>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
